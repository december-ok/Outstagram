mixin imagePostBlock(post={})
  .imagePostBlock
    .imagePart
      img.image__thumbnail(src=`/${post.contentFiles[0]}`, alt="posted image")
    .articlePart
      span.article__author= post.author+" "
      span.article__text= post.article
    .likesPart
      i.fas.fa-heart
    .timePart
    .commentPart
